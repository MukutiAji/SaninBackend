#!/usr/bin/env bash

PROJECT_DIR="$HOME/sanin-backend"
GITHUB_URL="https://raw.githubusercontent.com/MukutiAji/SaninBackend/main/sanin"
AUDIO_URL="https://raw.githubusercontent.com/MukutiAji/SaninBackend/main/startup.mp3"
AUDIO_FILE="$PROJECT_DIR/startup.mp3"

# ==== ğŸ” DETEKSI PLATFORM
if [[ "$OSTYPE" == "linux-android" ]]; then
  # TERMUX
  PKG_INSTALLER="pkg"
  PKG_UPDATE="pkg update -y && pkg upgrade -y"
  SCRIPT_PATH="$PREFIX/bin/sanin"
else
  if command -v sudo apt &>/dev/null; then
    PKG_INSTALLER="sudo apt"
    PKG_UPDATE="sudo apt update -y && sudo apt upgrade -y"
    SCRIPT_PATH="/usr/local/bin/sanin"
  elif command -v brew &>/dev/null; then
    PKG_INSTALLER="brew"
    PKG_UPDATE="brew update"
    SCRIPT_PATH="/usr/local/bin/sanin"
  else
    echo "âŒ Sistem gak dikenali. Install manual: nala, figlet, boxes, mpv, nodejs, git"
    exit 1
  fi
fi

# ==== ğŸ¨ WARNA RANDOM CERAH
COLORS=(32 33 34 35 36 91 92 93 94 95 96)
RANDOM_COLOR=${COLORS[$RANDOM % ${#COLORS[@]}]}

cetak() {
  printf "\e[1;${RANDOM_COLOR}m%s\e[0m\n" "$1"
}

print_output() {
  while IFS= read -r line; do
    echo -e "\e[1;${RANDOM_COLOR}m$line\e[0m"
  done
}

ascii_art() {
  clear
  echo
  cetak "â•­â”â”â”â”³â”â”â”â”³â”â•®â•±â•­â”³â”â”â”³â”â•®â•±â•­â•®"
  cetak "â”ƒâ•­â”â•®â”ƒâ•­â”â•®â”ƒâ”ƒâ•°â•®â”ƒâ”£â”«â”£â”«â”ƒâ•°â•®â”ƒâ”ƒ"
  cetak "â”ƒâ•°â”â”â”«â”ƒâ•±â”ƒâ”ƒâ•­â•®â•°â•¯â”ƒâ”ƒâ”ƒâ”ƒâ•­â•®â•°â•¯â”ƒ"
  cetak "â•°â”â”â•®â”ƒâ•°â”â•¯â”ƒâ”ƒâ•°â•®â”ƒâ”ƒâ”ƒâ”ƒâ”ƒâ”ƒâ•°â•®â”ƒâ”ƒ"
  cetak "â”ƒâ•°â”â•¯â”ƒâ•­â”â•®â”ƒâ”ƒâ•±â”ƒâ”ƒâ”£â”«â”£â”«â”ƒâ•±â”ƒâ”ƒâ”ƒ"
  cetak "â•°â”â”â”â”»â•¯â•±â•°â”»â•¯â•±â•°â”â”»â”â”â”»â•¯â•±â•°â”â•¯"
  sleep 1

  cetak "ğŸ” Cek awal dependensi (nala, figlet, boxes)..."

  for tool in nala figlet boxes; do
    if ! command -v "$tool" &>/dev/null; then
      cetak "[ğŸ“¥] Menginstall $tool..."
      $PKG_INSTALLER install "$tool" -y | print_output
    else
      cetak "[âœ…] $tool sudah terinstall"
    fi
  done

  sleep 2
  clear
}

play_startup_sound() {
  if [[ $1 == "--mute" ]]; then
    cetak "[ğŸ”‡] Mode sunyi diaktifkan"
    return
  fi

  if ! command -v mpv &>/dev/null; then
    cetak "[ğŸµ] Player mpv belum ada. Menginstall..."
    $PKG_INSTALLER install mpv -y | print_output
  fi

  if [ ! -f "$AUDIO_FILE" ]; then
    cetak "[ğŸ“¥] Download audio startup..."
    curl -L -o "$AUDIO_FILE" "$AUDIO_URL" | print_output
  fi

  cetak "[ğŸ§] Memutar suara startup..."
  mpv --no-video --really-quiet "$AUDIO_FILE" &
}

pkg_install() {
  if command -v nala &>/dev/null; then
    cetak "[ğŸ“¦] Menggunakan nala..."
    for pkg in "$@"; do
      if ! dpkg -s $pkg &>/dev/null; then
        nala install -y $pkg | print_output
      else
        cetak "[âœ…] $pkg sudah terinstall"
      fi
    done
  else
    for pkg in "$@"; do
      if ! command -v $pkg &>/dev/null; then
        $PKG_INSTALLER install $pkg -y | print_output
      else
        cetak "[âœ…] $pkg sudah terinstall"
      fi
    done
  fi
}

show_banner() {
  clear
  echo
  figlet -w 100 "SANIN WA" | while IFS= read -r line; do
    clean_line=$(echo -e "$line" | sed 's/\x1b\[[0-9;]*m//g')
    cetak "$clean_line"
  done

  echo "By: Mukticuy" | boxes -d stone | while IFS= read -r line; do
    clean_line=$(echo -e "$line" | sed 's/\x1b\[[0-9;]*m//g')
    cetak "$clean_line"
  done
  echo
}

install_dependencies() {
  cetak "[âš™ï¸] Cek dan install dependensi..."
  eval "$PKG_UPDATE" 2>/dev/null | print_output
  pkg_install nodejs git
  cd "$PROJECT_DIR" || exit
  cetak "[ğŸ“] Cek folder node_modules..."
  if [ ! -d "node_modules" ]; then
    cetak "[ğŸ“¦] node_modules belum ada. Jalankan npm install..."
    npm install | print_output
  else
    cetak "[âœ…] node_modules sudah tersedia"
  fi
}

start_backend() {
  echo
  cetak "[ğŸš€] Menjalankan server WhatsApp..."
  echo
  cd "$PROJECT_DIR" || exit
  while true; do
    node index.js
    cetak "[ğŸ’¥] Server mati. Restarting dalam 3 detik..."
    sleep 3
  done
}

install_command() {
  if [ ! -f "$SCRIPT_PATH" ]; then
    cetak "[ğŸ› ï¸] Menambahkan shortcut 'sanin' ke $SCRIPT_PATH"
    if [[ "$SCRIPT_PATH" == /usr/local/* ]]; then
      sudo cp "$0" "$SCRIPT_PATH"
      sudo sed -i 's/\r$//' "$SCRIPT_PATH"
      sudo chmod +x "$SCRIPT_PATH"
    else
      cp "$0" "$SCRIPT_PATH"
      sed -i 's/\r$//' "$SCRIPT_PATH"
      chmod +x "$SCRIPT_PATH"
    fi
    cetak "[âœ…] Sekarang bisa ketik 'sanin' dari mana aja"
    echo
  fi
}

# ==== ğŸ”„ MODE UPDATE
if [[ $1 == "update" ]]; then
  cetak "[ğŸ”„] Update script sanin dari GitHub..."
  curl -L -o "$SCRIPT_PATH" "$GITHUB_URL" | print_output
  sed -i 's/\r$//' "$SCRIPT_PATH"
  chmod +x "$SCRIPT_PATH"
  cetak "[âœ…] Script berhasil diupdate!"
  exit
fi

# ==== ğŸ§  EKSEKUSI
ascii_art
play_startup_sound "$1"
show_banner
install_command
install_dependencies
start_backend
